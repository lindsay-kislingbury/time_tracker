<!DOCTYPE html>
<html lang="en">
    <title>Courses</title>
    <head>
        <%- include ../partials/head.ejs %>
    </head>
    <header>
        <%- include ../partials/header.ejs %>
    </header>
    <body class="container" style="margin-top: 50px;">
    
        <% if(messages.success) { %>
        <div class="alert alert-success" role="alert"><%- messages.success %>
        <% } %>

        <% if (messages.error) { %>
        <div class="alert alert-danger" role="alert"><%- messages.error %></div>
        <% } %>
        
        <div class="card"> 
            <div class="card-header">
                <ul class="nav nav-pills w-100">
                    <li class="nav-pill active">
                        <a class="nav-link">Courses</a>
                    </li>
                    <li class="nav-pill ml-auto">
                        <a class="nav-link active" href="/courses/add">Add Course</a>
                    </li>
                </ul>
            </div>
        <div class="card-body">
            
            <% if(data.length) { %>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th width="200px">Action</th>
                    </tr>
                </thead>
                <tbody>
                <% for(var i = 0; i< data.length; i++) { %>
                    <tr>
                        <th scope="row"><%= (i+1) %></th>
                        <td><%= data[i].coursename%></td>
                        <td>
                            <a class="btn btn-success edit" href="../courses/edit/<%=data[i].idcourse%>">Edit</a>                       
                            <a class="btn btn-danger delete" onclick="return alert('Are You sure?')" href="../courses/delete/<%=data[i].idcourse%>">Delete</a>                       
                        </td>
                    </tr>
                <% } %>
                </tbody>
            </table>
            <% } %>
            
            <!-- if result is empty -->
            <% if(!data.length) { %>
                <p class="text-center">No Course found!</p>
            <% } %>
    
            </div>
        </div>
    </body>
    </html>
    </div>
    </body>
</html>